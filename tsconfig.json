{
  "compilerOptions": {
    "target": "es2016", 
    "module": "commonjs", 
    "lib": ["ES2016"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": ".",
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*",
    "src/config/*",
  ],
  "exclude": [
    "node_modules"
  ],
}
